<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="532.0" prefWidth="634.0" styleClass="Dashboard_container" stylesheets="@../../Styles/Dashboard.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.smarthome3.controllers.Homeowner.HomeownerController">

    <!-- Header -->
    <Text fx:id="user_name" layoutX="24.0" layoutY="49.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Hi, Jane" textAlignment="CENTER" wrappingWidth="77.53">
        <font>
            <Font size="18.0" />
        </font>
    </Text>

    <Label fx:id="login_date" layoutX="171.0" layoutY="34.0" opacity="0.63" text="12:19 PM | Monday, 24th of October, 2024" />

    <Text layoutX="569.0" layoutY="49.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Smart Home" wrappingWidth="98.0">
        <font>
            <Font name="System Bold" size="15.0" />
        </font>
    </Text>

    <!-- Humidity Overview Cards -->
    <VBox layoutX="24.0" layoutY="75.0" prefHeight="175.0" prefWidth="288.0" styleClass="card">
        <Text fill="#745230" strokeType="OUTSIDE" strokeWidth="0.0" text="Average Humidity">
            <font>
                <Font size="24.0" />
            </font>
        </Text>
        <Text opacity="0.55" strokeType="OUTSIDE" strokeWidth="0.0" text="55%">
            <font>
                <Font size="36.0" />
            </font>
        </Text>
    </VBox>

    <VBox layoutX="377.0" layoutY="75.0" prefHeight="175.0" prefWidth="288.0" styleClass="card">
        <Text fill="#745230" strokeType="OUTSIDE" strokeWidth="0.0" text="Highest Humidity">
            <font>
                <Font size="24.0" />
            </font>
        </Text>
        <Text opacity="0.55" strokeType="OUTSIDE" strokeWidth="0.0" text="70%">
            <font>
                <Font size="36.0" />
            </font>
        </Text>
    </VBox>

    <!-- Humidity Trends Chart -->
    <VBox layoutX="23.0" layoutY="278.0" prefHeight="254.0" prefWidth="641.0" styleClass="card">
        <Text fill="#745230" strokeType="OUTSIDE" strokeWidth="0.0" text="Humidity Trends">
            <font>
                <Font size="24.0" />
            </font>
        </Text>
        <LineChart fx:id="humidityChart" prefHeight="207.0" prefWidth="581.0" title="Humidity Over Time">
            <xAxis>
                <CategoryAxis label="Time (Days)" fx:id="xAxis" />
            </xAxis>
            <yAxis>
                <NumberAxis fx:id="yAxis" label="Humidity (%)" lowerBound="0" upperBound="100" />
            </yAxis>
        </LineChart>
    </VBox>

</AnchorPane>
